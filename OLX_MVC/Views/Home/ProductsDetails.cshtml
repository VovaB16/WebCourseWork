@model Product;

<div class="container">
    <h2>Деталі Продукту</h2>
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid" alt="Product Image">
        </div>
        <div class="col-md-8">
            <h3>@Model.Name</h3>
            <p><strong>Ціна:</strong> $@Model.Price</p>
            <p><strong>Опис:</strong> @Model.Description</p>

        </div>
    </div>
    <div class="row mt-3">
        <div class="col-4">
            <a asp-action="Index" class="btn btn-dark w-100">Назад</a>
        </div>
    </div>
</div>
