@model ProductFormModel;
@{
    bool isCreate = ViewBag.Creation ?? false;
}

<h2>@(isCreate ? "Створити" : "Редагувати") Продукт</h2>

<form class="row g-3" asp-action="Edit" method="post">
    <div class="shadow p-3 mb-2 bg-body-tertiary rounded">
        <div class="col-md-9 mb-3">
            <label asp-for=Name class="form-label">Вкажіть назву</label>
            <input asp-for=Name type="text" class="form-control" placeholder="Введіть назву товару">
            <span asp-validation-for=Name class="small text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="CategoryId" for="inputState" class="form-label">Категорія</label>
            <select asp-for="CategoryId" asp-items=ViewBag.Categories id="inputState" class="form-select">
                <option selected>Вибирати</option>
            </select>
            <span asp-validation-for=CategoryId class="small text-danger"></span>
        </div>
    </div>
    <div class="shadow p-3 mb-2 bg-body-tertiary rounded">
        <div class="col-md-9">
            <label asp-for=ImageUrl for="inputEmail4" class="form-label">Фото</label>
            <input asp-for=ImageUrl type="url" class="form-control" placeholder="Введіть адресу зображення товару" id="inputEmail4">
            <span asp-validation-for=ImageUrl class="small text-danger"></span>
        </div>
    </div>
    <div class="shadow p-3 mb-2 bg-body-tertiary rounded">
        <div class="col-md-9">
            <label asp-for=Price class="form-label">Ціна</label>
            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input asp-for=Price type="number" min="0" step="0.01" class="form-control" placeholder="Введіть ціну товару">
            </div>
            <span asp-validation-for=Price class="small text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for=Discount class="form-label">Знижка</label>
            <div class="input-group mb-3">
                <span class="input-group-text">%</span>
                <input asp-for=Discount type="number" min="0" max="100" step="1" class="form-control" placeholder="Введіть знижку на товар">
            </div>
            <span asp-validation-for=Discount class="small text-danger"></span>
        </div>
    </div>
    <div class="shadow p-3 mb-2 bg-body-tertiary rounded">
        <div class="col-md-9 mb-3">
            <label asp-for=Description for="exampleFormControlTextarea1" class="form-label">Опис</label>
            <textarea asp-for=Description class="form-control" id="exampleFormControlTextarea1" placeholder="Опис товару" rows="3"></textarea>
            <span asp-validation-for=Description class="small text-danger"></span>
        </div>
    </div>
    <div class="col-6">
        <a asp-action="Index" class="btn btn-dark w-100">Go Back</a>
    </div>
    <div class="col-6">
        @if (isCreate)
        {
            <button type="submit" class="btn btn-success w-100">Create</button>
        }
        else
        {
            <button type="submit" class="btn btn-warning w-100">Edit</button>
        }
    </div>
</form>